{
  "name": "pomo-server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrateprod": "bun run ./src/infrastructure/database/migrate.ts",
    "db:studio": "drizzle-kit studio --verbose",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "esbuild src/index.ts --outdir=dist --bundle --minify",
    "initialize": "bun install && docker-compose up --no-recreate -d && bun db:migrate",
    "docker:up": "docker compose up -d",
    "docker:logs": "docker logs -f --details pomo-backend",
    "docker:build": "docker compose up -d --build",
    "docker:cli": "docker exec -t pomo-db sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@types/bun": "latest",
    "@types/eslint": "^8.56.0",
    "@types/node": "^20.14.8",
    "@types/nodemailer": "^6.4.15",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.2"
  },
  "type": "module",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.650.0",
    "@hono/sentry": "^1.2.0",
    "@hono/zod-validator": "^0.2.2",
    "@node-rs/argon2": "^1.8.3",
    "@paralleldrive/cuid2": "^2.2.2",
    "@sentry/bun": "^8.41.0",
    "arctic": "^1.9.1",
    "drizzle-kit": "^0.21.4",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "handlebars": "^4.7.8",
    "hono": "^4.4.7",
    "hono-rate-limiter": "^0.3.0",
    "oslo": "^1.2.0",
    "postgres": "^3.4.4",
    "reflect-metadata": "^0.2.2",
    "resend": "^4.0.1",
    "tslib": "^2.6.3",
    "tsyringe": "^4.8.0",
    "typescript": "^5.5.2",
    "zod": "^3.23.8"
  }
}
